{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "hardhat.config.ts",
    "test/**/*.ts",
    "scripts/**/*.ts",
    "contracts/**/*.sol"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}
